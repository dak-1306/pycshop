{
  "name": "pycshop",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "backend": "concurrently \"cd microservice/api_gateway && node index.js\" \"cd microservice/auth_service && node app.js\" \"cd microservice/product_service && node app.js\" \"cd microservice/admin_service && node app.js\" \"cd microservice/shop_service && node server.js\" \"cd microservice/danhgia_service && node server.js\"",
    "kafka-consumer": "cd microservice/danhgia_service && node shopRatingConsumer.js",
    "backend-with-kafka": "concurrently \"npm run backend\" \"npm run kafka-consumer\"",
    "kafka:start": "docker compose -f docker-compose-kafka.yml up -d",
    "kafka:stop": "docker compose -f docker-compose-kafka.yml down",
    "kafka:logs": "docker compose -f docker-compose-kafka.yml logs -f",
    "kafka:ui": "echo Opening Kafka UI at http://localhost:8080 && start http://localhost:8080",
    "start:kafka": "npm run kafka:start && node scripts/wait.js 10",
    "start:backend": "npm run start:kafka && npm run backend-with-kafka",
    "start:full": "npm run start:kafka && concurrently \"npm run dev\" \"npm run backend-with-kafka\"",
    "stop": "npm run kafka:stop",
    "fullstack": "concurrently \"npm run dev\" \"npm run backend\"",
    "setup-db": "node scripts/setup-db-info.js",
    "optimize-db": "npm run setup-db",
    "production": "npm run build && npm run backend",
    "start": "npm run backend"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "http-proxy-middleware": "^3.0.5",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "mysql2": "^3.15.1",
    "node-fetch": "^3.3.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "nodemon": "^3.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "vite": "^7.1.7"
  },
  "description": "This template provides a minimal setup to get React working in Vite with HMR and some ESLint rules.",
  "main": "eslint.config.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dak-1306/pycshop.git"
  },
  "keywords": [],
